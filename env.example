# ATLAS Sandbox Router - API & Database Configuration

# --- DATABASE (NEO4J) ---
# Use Bolt protocol for local or AuraDB (cloud)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# --- API KEYS ---
GROQ_API_KEY=your_groq_api_key_here
GROQ_API_KEY_BACKUP=your_backup_key_here
GEMINI_API_KEY=your_gemini_api_key_here
SERPER_API_KEY=your_serper_api_key_here
FLUX_API_URL=http://localhost:7860/sdapi/v1/txt2img

# --- SYSTEM SETTINGS ---
PORT=8080
DEBUG=True

# --- ACCESS CONTROL (INTERNAL_ONLY Mode) ---
# true ise sadece whitelist'teki user_id'ler erişebilir
INTERNAL_ONLY=false
# Virgülle ayrılmış whitelist user_id'leri
INTERNAL_WHITELIST_USER_IDS=u_admin,u_dev,u_test
